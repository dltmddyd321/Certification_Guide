<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CDA9"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/main"
        android:text="정산기 공부하기"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_menu_background"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/writtenTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="필기 기출 풀기"
            android:fontFamily="@font/main"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="78dp" />

        <CheckBox
            android:id="@+id/wordStudy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="실기 단어 암기"
            android:fontFamily="@font/main"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="78dp" />

        <CheckBox
            android:id="@+id/wordTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="실기 단어 시험"
            android:fontFamily="@font/main"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="153dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/selectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_go"
                android:fontFamily="@font/main"
                android:text="선택"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_go"
                android:fontFamily="@font/main"
                android:text="취소"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>